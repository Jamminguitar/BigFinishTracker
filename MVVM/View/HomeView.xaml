<UserControl x:Class="Big_Finish_Tracker.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Big_Finish_Tracker.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Explore"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Border Width="400"
                    Height="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#9e3531" Offset="0.0"/>
                        <GradientStop Color="#baa0cf" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Check out more&#x0a;Big Finish releases"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>
                    </StackPanel>

                    <Image Width="250"
                           Height="120"
                           Margin="10"
                           Source="/Images/BigFinishLogo.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"/>
                    <Button Background="Transparent" Opacity="0.1" Click="Big_Finish_Button_Click"/>

                </Grid>

            </Border>

            <Border Width="200"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#7affb5" Offset="0.0"/>
                        <GradientStop Color="#00b400" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Listen for free&#x0a;on Spotify"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="10,15,10,0"/>
                    </StackPanel>

                    <Image Source="/Images/Spotify_Primary_Logo_RGB_Black.png"
                           HorizontalAlignment="Right"
                           Margin="5"
                           VerticalAlignment="Bottom" Height="100" Width="100"/>
                    <Button Background="Transparent" Opacity="0.1" Click="Spotify_Button_Click"/>

                </Grid>

            </Border>

        </StackPanel>

        <StackPanel>

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Newest Releases"
               Foreground="White"
               FontSize="20"
               HorizontalAlignment="Left"
               Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        CornerRadius="10"
                        Margin="0">
                    <Image Source="/Images/And_You_Will_Obey_Me.jpg"/>

                </Border>

                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Image Source="/Images/Apocalypse_revised.jpg"/>
                </Border>

                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Image Source="/Images/B080_timeworks_big.jpeg"/>
                </Border>

                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Image Source="/Images/900px-The_Memory_Bank_and_Other_Stories_cover.jpg"/>
                </Border>

            </StackPanel>
        </StackPanel>

    </StackPanel>

</UserControl>
